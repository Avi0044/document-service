<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Properties>
        <property name="basePath">/var/log/document-service</property>
    </Properties>
    <Appenders>
        <RollingFile name="fileApp"
                     fileName="${basePath}/document.log"
                     filePattern="${basePath}/$${date:yyyy-MM}/document-%d{MM-dd-yyyy}-%i.log.gz">
            <JsonTemplateLayout eventTemplateUri="classpath:LogstashJsonEventLayoutV1.json" maxStringLength="50000"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
        </RollingFile>

    </Appenders>
    <Loggers>
        <Logger name="in.nbt.document" level="info" additivity="false">
            <AppenderRef ref="fileApp" />
            <AppenderRef ref="LogInJSON"/>
        </Logger>
        <Root level="info">

        </Root>
    </Loggers>
</Configuration>